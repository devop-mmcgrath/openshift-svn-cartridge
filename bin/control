#!/bin/bash -eu

source $OPENSHIFT_SVN_PLUGIN_DIR/svn-plugin.conf

function start {
  echo "Starting svn-Plugin cartridge"
  touch $SVN_STATE/control_start
  touch $SVN_STATE/svn_process
}

function stop {
  echo "Stopping svn-Plugin cartridge"
  touch $SVN_STATE/control_stop
  rm -f $SVN_STATE/svn_process
}

function restart {
  touch $SVN_STATE/control_restart
  touch $SVN_STATE/svn_process
  stop
  start
}

function status {
  touch $SVN_STATE/control_status
  [ -f $SVN_STATE/svn_process ]
}

case "$1" in
  start)         start ;;
  stop)          stop ;;
  restart)       restart ;;
  status)        status ;;
  reload)        touch $SVN_STATE/control_reload ;;
  tidy)          touch $SVN_STATE/control_tidy ;;
  pre-build)     touch $SVN_STATE/control_pre_build ;;
  build)         touch $SVN_STATE/control_build ;;
  deploy)        touch $SVN_STATE/control_deploy ;;
  post-deploy)   touch $SVN_STATE/control_post_deploy ;;
  pre-snapshot)  touch $SVN_STATE/control_pre_snapshot ;;
  post-snapshot) touch $SVN_STATE/control_post_snapshot ;;
  pre-restore)   touch $SVN_STATE/control_pre_restore ;;
  post-restore)  touch $SVN_STATE/control_post_restore ;;
  *)           exit 0
esac

exit 0
